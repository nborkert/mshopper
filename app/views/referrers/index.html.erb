<h1>Listing referrers</h1>

<table>
  <tr>
    <th>Contact name</th>
    <th>Email address</th>
    <th>Phone number</th>
    <th>Referral code</th>
    <th>Referral rate</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @referrers.each do |referrer| %>
  <tr>
    <td><%= referrer.contact_name %></td>
    <td><%= referrer.email_address %></td>
    <td><%= referrer.phone_number %></td>
    <td><%= referrer.referral_code %></td>
    <td><%= referrer.referral_rate %></td>
    <td><%= link_to 'Show', referrer %></td>
    <td><%= link_to 'Edit', edit_referrer_path(referrer) %></td>
    <td><%= link_to 'Destroy', referrer, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

